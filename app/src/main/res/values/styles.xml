<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="BackArrowImageStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_18sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:background">@drawable/ic_back_arrow</item>
    </style>

    <style name="BackImageStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_11sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:layout_marginStart">@dimen/screen_start_margin</item>
        <item name="android:background">@drawable/ic_back</item>
    </style>

    <style name="ScreenTitleAuthenticationStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="ScreenTitleHomeStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="CreateAccountCardView" parent="CardView">
        <item name="android:layout_marginStart">@dimen/login_component_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_component_end_margin</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="cardBackgroundColor">@color/catskill_white</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
    </style>

    <style name="CreateAccountEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/daintree</item>
        <item name="android:textColorHint">@color/silver</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="SideNavigationTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/daintree</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>