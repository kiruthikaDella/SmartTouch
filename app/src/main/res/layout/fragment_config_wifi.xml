<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    android:orientation="vertical"
    tools:context=".ui.fragments.main.home.ConfigWifiFragment"
    tools:ignore="contentDescription,Autofill,LabelFor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/BackImageStyle"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/ScreenTitleHomeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/iv"
            android:layout_toEndOf="@+id/iv_back"
            android:gravity="center"
            android:text="@string/title_text_config_wifi" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/white"
        android:orientation="vertical"
        app:top_left_corner_radius="@dimen/corner_radius_20dp"
        app:top_right_corner_radius="@dimen/corner_radius_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/text_panel_name"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/edt_panel_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/hint_text_enter_panel_name"
            android:inputType="text"
            android:maxLength="20"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/text_wifi_ssid"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/edt_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/hint_text_wifi_ssid"
            android:inputType="text"
            android:maxLength="50"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/text_password"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/edt_wifi_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/hint_text_wifi_password"
            android:inputType="textPassword"
            android:maxLength="50"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@color/dodger_blue"
            android:gravity="center"
            android:orientation="horizontal"
            app:corner_radius="@dimen/corner_radius_6dp">

            <ImageView
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:src="@drawable/ic_save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/button_text_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

</LinearLayout>