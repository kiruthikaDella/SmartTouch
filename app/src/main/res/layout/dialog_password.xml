<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/dialog_background_color"
    android:orientation="vertical"
    app:corner_radius="@dimen/dialog_corner_radius">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/text_update_password"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/_18ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/screen_end_margin">

        <EditText
            android:id="@+id/edt_current_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/hint_text_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_40sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/iv_hide_current_password"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_password_hidden"
            app:tint="@color/gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/screen_end_margin">

        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/hint_text_new_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_40sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/iv_hide_new_password"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_password_hidden"
            app:tint="@color/gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/screen_end_margin">

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/catskill_white_background"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/hint_text_confirm_new_password"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_40sdp"
            android:textColor="@color/daintree"
            android:textColorHint="@color/ghost"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/iv_hide_confirm_password"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_password_hidden"
            app:tint="@color/gray" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/nepal_background_4dp_corner"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0"
            android:text="@string/text_cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_button_size"
            app:backgroundTint="@null" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/dodger_blue_background_4dp_corner"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0"
            android:text="@string/text_save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_button_size"
            app:backgroundTint="@null" />

    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>