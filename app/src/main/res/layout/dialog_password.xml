<?xml version="1.0" encoding="utf-8"?>
<com.jcminarro.roundkornerlayout.RoundKornerLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    app:corner_radius="@dimen/corner_radius_20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/text_update_password"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/_18ssp" />

    <EditText
        android:id="@+id/edt_current_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:background="@drawable/catskill_white_background"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/hint_text_password"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/daintree"
        android:textColorHint="@color/ghost"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:background="@drawable/catskill_white_background"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/hint_text_new_password"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/daintree"
        android:textColorHint="@color/ghost"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:background="@drawable/catskill_white_background"
        android:fontFamily="@font/roboto_medium"
        android:hint="@string/hint_text_confirm_new_password"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/theme_color"
        android:textColorHint="@color/ghost"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/nepal"
            app:cardCornerRadius="@dimen/corner_radius_4dp"
            app:cardElevation="@dimen/_5sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0"
                android:text="@string/text_cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@null" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.5"
            app:cardBackgroundColor="@color/theme_color"
            app:cardCornerRadius="@dimen/corner_radius_4dp"
            app:cardElevation="@dimen/_5sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_medium"
                android:letterSpacing="0"
                android:text="@string/text_save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@null" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>