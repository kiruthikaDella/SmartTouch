<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/text_update_password"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_password"
        android:textColor="@color/daintree"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:background="@drawable/catskill_white_background"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/hint_text_password"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/daintree"
        android:textColorHint="@color/ghost"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/text_confirm_password"
        android:textColor="@color/daintree"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:background="@drawable/catskill_white_background"
        android:fontFamily="@font/roboto_medium"
        android:hint="@string/hint_confirm_password"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:textColor="@color/theme_color"
        android:textColorHint="@color/ghost"
        android:textSize="@dimen/_12ssp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_component_height"
        android:layout_marginStart="@dimen/screen_start_margin"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/screen_end_margin"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/dodger_blue_background"
        android:text="@string/text_update_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:backgroundTint="@null" />

</LinearLayout>