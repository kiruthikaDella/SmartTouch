<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_sliding_up_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".ui.activities.MainActivity"
    android:gravity="bottom"
    app:umanoDragView="@id/drag_add_room"
    app:umanoOverlay="true"
    app:umanoPanelHeight="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/coordinator_bottom_navigation"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_main" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottom_app_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                app:contentInsetStart="0dp"
                android:layout_gravity="bottom"
                android:background="@color/white">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_navigation_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:labelVisibilityMode="unlabeled"
                    app:menu="@menu/bottom_nav_menu"
                    android:background="@color/white"
                    app:itemIconTint="@color/bottom_nav_color_selector"
                    app:itemIconSize="@dimen/_14sdp"
                    app:itemRippleColor="@android:color/transparent" />

            </com.google.android.material.bottomappbar.BottomAppBar>

            <ImageView
                android:id="@+id/iv_add_room"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/ic_bottom_navigation_add_room"
                app:layout_anchor="@id/bottom_app_bar"
                app:layout_anchorGravity="center_horizontal" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:id="@+id/drag_add_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:top_left_corner_radius="@dimen/_20sdp"
        app:top_right_corner_radius="@dimen/_20sdp">

        <ImageButton
            android:id="@+id/iv_hide_panel"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/ic_arrow_down"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_text_add_room"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_text_add_room"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp"
            android:hint="@string/hint_text_room_name"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="@color/ghost"
            android:background="@drawable/catskill_white_background_with_rounded_corners"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_text_room_type"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="start"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/catskill_white_background_with_rounded_corners">

            <Spinner
                android:id="@+id/spinner_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:layout_toStartOf="@+id/iv_down"
                android:layout_marginEnd="@dimen/_5sdp"/>

            <ImageButton
                android:id="@+id/iv_down"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_7sdp"
                android:background="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="@color/daintree"/>

        </RelativeLayout>

     <!--   <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_component_height"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/daintree"
            android:textSize="@dimen/_12ssp"
            android:hint="@string/hint_text_room_name"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColorHint="@color/ghost"
            android:background="@drawable/catskill_white_background_with_rounded_corners"/>
-->
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/screen_start_margin"
            android:layout_marginEnd="@dimen/screen_end_margin"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/button_text_add_room"
            android:textAllCaps="false"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/dodger_blue_background_with_rounded_corners" />



    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>