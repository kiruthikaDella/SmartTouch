<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp">

    <TextView
        android:id="@+id/tv_text_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_room_name"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/daintree"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_device_name"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/daintree"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/tv_text_room_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_room_name" />

    <TextView
        android:id="@+id/tv_text_switch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_switch_name"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/daintree"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/tv_text_device_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_device_name" />

    <TextView
        android:id="@+id/tv_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_status"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/daintree"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/tv_text_switch_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_switch_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/nepal"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/tv_text_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_status" />

    <ImageView
        android:id="@+id/iv_arrow_room"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_6sdp"
        android:src="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_text_room_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text_room_name" />

    <ImageView
        android:id="@+id/iv_arrow_device"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_6sdp"
        android:src="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_text_device_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text_device_name" />

    <ImageView
        android:id="@+id/iv_arrow_switch"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_6sdp"
        android:src="@drawable/ic_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_text_switch_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text_switch_name" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_living_room"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/theme_color"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_room"
        app:layout_constraintTop_toTopOf="@+id/iv_arrow_room"
        app:layout_constraintBottom_toBottomOf="@+id/iv_arrow_room"/>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMT00838234"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/theme_color"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_device"
        app:layout_constraintTop_toTopOf="@+id/iv_arrow_device"
        app:layout_constraintBottom_toBottomOf="@+id/iv_arrow_device"/>

    <TextView
        android:id="@+id/tv_switch_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch-2"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/theme_color"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_switch"
        app:layout_constraintTop_toTopOf="@+id/iv_arrow_switch"
        app:layout_constraintBottom_toBottomOf="@+id/iv_arrow_switch"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PanelSwitchColorStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_text_status"
        app:layout_constraintBottom_toBottomOf="@+id/tv_text_status"/>

</androidx.constraintlayout.widget.ConstraintLayout>