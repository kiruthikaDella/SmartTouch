<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginStart="@dimen/screen_start_margin"
    android:layout_marginEnd="@dimen/screen_end_margin"
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/corner_radius_2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/catskill_white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_1sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <ImageButton
                    android:id="@+id/img_panel_menu"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:tint="@color/theme_color"
                    android:background="@drawable/ic_panel_menu" />

                <TextView
                    android:id="@+id/tv_panel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMT2028189"
                    android:textColor="@color/daintree"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_panel_menu"
                    android:layout_marginStart="@dimen/_10sdp" />

                <ImageButton
                    android:id="@+id/img_panel_edit"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:tint="@color/theme_color"
                    android:background="@drawable/ic_panel_edit" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <include
            layout="@layout/layout_eight_switch"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/card_title" />

        <LinearLayout
            android:id="@+id/linear_panel_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/triangle_up"
                app:tint="@color/theme_color"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="fitXY" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/theme_color"
                android:layout_marginTop="-1dp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_6sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <LinearLayout
                        android:id="@+id/linear_customization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:src="@drawable/ic_panel_menu_customization"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_customization"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/linear_features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/ic_panel_menu_features"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_features"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/white"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:src="@drawable/ic_panel_menu_settings"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_settings"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>